
@{
    ViewData["Title"] = "Users";
}



<h1>User List</h1>

<table class="table-striped table-responsive table-bordered">
    <thead>
    <tr>
        <th>UserName</th>
        <th>Email</th>
        <th>Action</th>
    </tr>
    </thead>

    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="30%">@obj.UserName</td>
                <td width="30%">@obj.Email</td>
                <td width="30%">
                    <div class="w-45 btn-group">
                        <a asp-controller="Home" asp-action="Edit" asp-route-id="@obj.Id">
                            <i class="btn btn-primary bi bi-pencil-square"></i>
                        </a>
                    </div>
                </td>
                <td width="30%">
                    <div class="w-45 btn-group">
                        <a asp-controller="Home" asp-action="Delete" asp-route-id="@obj.Id">
                            <i class=" btn btn-danger bi bi-trash3"></i>
                        </a>
                    </div>
                </td>


            </tr>
        }
    </tbody>
</table>



   

